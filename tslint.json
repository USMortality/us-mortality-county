{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "typedef": [
            true,
            "call-signature"
        ],
        "max-line-length": [
            true,
            {
                "limit": 80,
                "ignore-pattern": "^import |^export {(.*?)}",
                "check-strings": true,
                "check-regex": true
            }
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "no-unused-variable": [
            true,
            {
                "ignore-pattern": "^_"
            }
        ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                80
            ]
        }
    }
}